package java_basics;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		double pi, raio, area;
		
		raio = sc.nextDouble();
		pi = 3.14159;
		
		area = pi * Math.pow(raio, 2);
		
		System.out.printf("√Årea do Raio = %.4f%n", area);
		
	}

}
