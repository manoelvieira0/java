package java_basics;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int number, resto;
		
		System.out.println("Informe um número: ");
		number = sc.nextInt();
		
		resto = number % 2;
		
		System.out.println("Informe um número: " + resto);
		
		sc.close();

	}

}
